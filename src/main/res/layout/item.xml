<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <TextView
        android:id="@+id/tvSurahLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Al-Fatihah"
        style="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:id="@+id/tvTerjemahanSurah"
        android:layout_below="@id/tvSurahLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Terjemah"
       />


    <TextView
        android:id="@+id/tvViewTempatSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSurahLatin"
        android:layout_marginTop="26dp"
        android:textColor="@color/black"
        android:text="Tempat Diturunkan:" />

    <TextView
        android:id="@+id/tvSurahArab"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفاتحة"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
       />

</RelativeLayout>